# Habilitar el motor de reescritura
RewriteEngine On

# Redirigir de "index.php" a la URL base
RewriteCond %{THE_REQUEST} /index\.php [NC]
RewriteRule ^index\.php$ / [L,R=301]


# Forzar el uso de "www" en localhost (opcional)
RewriteCond %{HTTP_HOST} ^localhost$ [NC]
RewriteRule ^(.*)$ http://www.localhost/$1 [L,R=301]



# Redirigir "indexEng.php" a "index"
RewriteRule ^index$ /indexEng.php [L]

# Redirigir "indexEsp.php" a "inicio"
RewriteRule ^inicio$ /indexEsp.php [L]



# Proteger archivos espec√≠ficos dentro de la carpeta "js"
<Files "app.js">
    Order Allow,Deny
    Deny from all
</Files>

<Files "realstate.js">
    Order Allow,Deny
    Deny from all
</Files>

# Proteger el acceso directo a las carpetas "js"
<Directory "/js">
    Order Allow,Deny
    Deny from all
</Directory>
